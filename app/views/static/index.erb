<h1>Quora Clone HOME Page</h1>

<% if logged_in? %>
<p>You are logged in as <%= @user.name %><br></p>
<%else%>
<p>You are currently not logged in</p><br>
<%end%>

<h2>Latest Questions!</h2>

<% if logged_in? %>

<% @question.each_with_index do |q, index| %>
  <a href="/questions/<%= q.id %>">
    <p><%= "#{index + 1})  #{q.question} (#{q.answers.count} answers. Total Votes: #{q.votes.count})" %></p>

    <form action="/questions/<%= q.id %>" method="post">
		<input type="hidden" name="vote" value="true">
		<input type="submit" value="Upvote">
		</form>

		<form action="/questions/<%= q.id %>" method="post">
		<input type="hidden" name="vote" value="false">
		<input type="submit" value="Downvote">
		</form>
  </a>
<% end %>


		<a href="/questions/new"><button>Ask a new question</button></a><br>
		<a href="/users/<%= @user.id %>"><button>View My Profile</button></a><br>
		<a href="/users/<%= @user.id %>/edit"><button>Edit Profile</button></a><br><br>
		<a href="/users/logout"><button>LOGOUT</button></a>
		<a href="/"><button>HOME</button></a>

	<%else%>

	<% @question.each_with_index do |q, index| %>
  <a href="/questions/<%= q.id %>">
    <p><%= "#{index + 1})  #{q.question} (#{q.answers.count} answers. Total Votes: #{q.votes.count})" %></p>
  </a>
	<% end %>

		<p>For existing users Login</p>
		<a href="/users"><button>Login</button></a>
		<p>For new users Sign Up</p>
		<a href="/users/new"><button>Sign Up</button></a><br><br>
		<a href="/users/logout"><button>LOGOUT</button></a>
		<a href="/"><button>HOME</button></a>

	<%end%>


