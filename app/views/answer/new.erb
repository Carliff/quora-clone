<h1>New Answer</h1>

<% if logged_in? %>
<h2>You are logged in as <%= @user.name %><br></h2>
<%else%>
<h2>You are currently not logged in</h2><br>
<%end%>

<%=@warning if @warning%>

<form action="/questions/<%=@question.id %>/answers" method="POST">
	<label>Answer: </label>
	<input type="text" name="body"><br>
	<input type="submit" value="Answer">
</form>

<a href="/"><button>See all questions</button></a>